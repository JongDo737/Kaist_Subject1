<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#D0FFD5"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 탄수화물, 단백질, 지방 비율"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="27sp"
            android:textColor="@color/black"
            />
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart_summary"
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="500dp"
            android:layout_marginBottom="70dp">
        </com.github.mikephil.charting.charts.PieChart>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜별 탄수화물, 단백질, 지방 섭취량 추이"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <com.github.mikephil.charting.charts.LineChart
            android:layout_height="300dp"
            android:layout_width="match_parent"
            android:id="@+id/summary_chart"
            android:layout_marginBottom="70dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜별 칼로리 섭취량 추이"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <com.github.mikephil.charting.charts.LineChart
            android:layout_height="300dp"
            android:layout_width="match_parent"
            android:id="@+id/calorie_chart"
            android:layout_marginBottom="70dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜별 탄수화물 섭취량 추이"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <com.github.mikephil.charting.charts.LineChart
            android:layout_height="300dp"
            android:layout_width="match_parent"
            android:id="@+id/carbohydrate_chart"
            android:layout_marginBottom="70dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜별 단백질 섭취량 추이"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <com.github.mikephil.charting.charts.LineChart
            android:layout_height="300dp"
            android:layout_width="match_parent"
            android:id="@+id/protein_chart"
            android:layout_marginBottom="70dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜별 지방 섭취량 추이"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <com.github.mikephil.charting.charts.LineChart
            android:layout_height="300dp"
            android:layout_width="match_parent"
            android:id="@+id/fat_chart"/>
    </LinearLayout>
</ScrollView>